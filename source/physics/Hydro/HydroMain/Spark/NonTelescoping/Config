##python3:genLines

# Config file for the Spark Hydro solvers without telescoping
# [physics/Hydro/HydroMain/Spark/NonTelescoping]

import os.path
import globals
from globals import *

def genLines(setupvars):

    yield '''

USESETUPVARS useMP5
USESETUPVARS useGLM
USESETUPVARS useTVD
USESETUPVARS useFog
USESETUPVARS useLim03
USESETUPVARS nontelescoping


IF useTVD or useLim03 or useFog
  GUARDCELLS 2
	PPDEFINE NSTENCIL 2
ELSE
  GUARDCELLS 3
	PPDEFINE NSTENCIL 3
ENDIF

# Variables required for state saving
SCRATCHCENTERVAR mass 
SCRATCHCENTERVAR xmom 
SCRATCHCENTERVAR ymom 
SCRATCHCENTERVAR zmom 
SCRATCHCENTERVAR mene                  	

PARAMETER telescoping          BOOLEAN  FALSE
'''

    for i in range(13-5):
        yield 'SCRATCHCENTERVAR zz%.2d' % (i+6)
