!!NOVARIANTS
subroutine hy_rk_calcLimits(stage, blkLimits, limits)

#include "Simulation.h"
#include "constants.h"
#include "Spark.h"

   implicit none

   integer, intent(IN) :: stage
   integer, dimension(LOW:HIGH, MDIM), intent(IN) :: blkLimits
   integer, dimension(LOW:HIGH, MDIM), intent(OUT) :: limits

   integer :: dir, ng

   @M hy_DIR_TARGET &
   @M hy_DIR_TARGET_map(to, [stage, blkLimits, limits]) &
   @M hy_DIR_end
   ng = (MAXSTAGE-stage)*NSTENCIL
   @M hy_setLims(ng)
   @M hy_DIR_TARGET_end

end subroutine hy_rk_calcLimits
